{%- assign section_name = 'fifty-fifty' -%}
{%- assign section_id = section_name | append: '--' | append: section.id -%}

{% assign colour_theme = section.settings.colour_theme | default: 'light' %}
{% assign text_alignment = section.settings.text_alignment | default: 'bottom' %}

{% if section.settings.anchor_id != blank %}
{% assign section_id = section.settings.anchor_id %}
{% endif %}

<div class="container-fluid px-0 {{ section_name }}-wrapper mb-lg-150">
  <div class="row justify-content-center">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'media' -%}

      <div class="fifty-fifty_media  col-12 col-lg-7 px-0">
        <img
          class="lazyload-item lazyload-item--image lazyload-item--inline lazyautosizes lazyloaded"
          src="{{ block.settings.image | img_url: 'master'  }}" alt="Fifty-Fifty Image">
      </div>

      {%- when 'content' -%} 

      <div class="fifty-fifty_content  col-10 col-md-8 col-lg-5 d-flex justify-content-center px-lg-65 py-50 py-lg-0 ">
        <div class="d-flex flex-column justify-content-center">
          <h2 class="fifty-fifty__heading heading aos-init aos-animate">{{ block.settings.heading }}</h2>
          <div class="fifty-fifty__message message rte aos-init aos-animate">
            <p>{{ block.settings.description }}</p>
          </div>

          {% if block.settings.cta_link != blank %}

          <div class="fifty-fifty__ctas">
            <div class="fifty-fifty__cta aos-init aos-animate">
              <div class="cta" data-justify="not-set"><a class="link outlined"
                  href="{{ block.settings.cta_link }}" target="_self">
                  <span class="link__title">{{ block.settings.cta_title }}</span>
                </a></div>
            </div>
          </div>
          {%endif%}

        </div>
      </div>

      

      {%endcase%}
      {%- endfor -%}
  </div>
</div>
  


</div>

{% schema %}
{
"name": "Fifty-Fifty",
"tag": "section",
"class": "section section--fifty-fifty",
"max_blocks": 2,
"settings": [

],
"blocks": [
{
"name": "Content",
"type": "content",
"limit": 1,
"settings": [
{
"label": "Heading",
"type": "text",
"id": "heading"
},
{
"label": "Description",
"type": "richtext",
"id": "description"
},
{
  "label": "CTA Title",
  "type": "text",
  "id": "cta_title",
  "default": "Shop now"
  },
{
"label": "CTA Link",
"type": "url",
"id": "cta_link"
}
]
},
{
"name": "Media",
"type": "media",
"limit": 1,
"settings": [
{
"label": "Image",
"type": "image_picker",
"id": "image"
},
{
"label": "Caption",
"type": "text",
"id": "caption"
},
{
"label": "Stamp",
"type": "image_picker",
"id": "stamp"
}
]
}
],
"presets": [
{
"name": "Fifty-Fifty"
}
]
}
{% endschema %}