
<main id="quick-cart" >

    <div class="quick-cart">
        <section class="quick-cart__header">
            <div class="row">
                <div class="col-8">
                    <a  href="#" data-toggle="show" role="button" aria-expanded="true" aria-controls="#quick-cart" data-target="#quick-cart,body" aria-label="cart">
                        <span class="link-text">‚Üê  CONTINUE SHOPPING</span>
                    </a>
                </div>
                <div class="col-4 d-flex justify-content-end">
                    <a  href="#" data-toggle="show" role="button" aria-expanded="true" aria-controls="#quick-cart" data-target="#quick-cart, body" aria-label="cart">
                        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0.804688 1L11.3543 11.5" stroke="black"/>
                            <path d="M11.3535 1L0.803894 11.5" stroke="black"/>
                        </svg>                            
                    </a>
                </div>
            </div>
        </section>
    
        <section class="quick-cart_main">
            {% for item in cart.items %}
                
            
            {% if cart.item_count > 1 %}

            <div class="row">
                <div class="col-6">
                    <h4>Your Cart</h4>
                </div>
                <div class="col-6 d-flex justify-content-end link-text">
                    ({{cart.item_count}} items)
                </div>
            </div>

            <div class="row cart-item">
                <div class="col-6">
                    {%
                        render 'lazyload-image',
                        alt_text: item.title,
                        classes: 'cart-item__thumb'
                        image:  item.image,
                    %}
                </div>
                <div class="col-6">
                    <a role="button" class="cart-item__remove" href="{{ item.url_to_remove }}">
                        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0.759766 0.5L11.3094 11" stroke="black"/>
                            <path d="M11.3086 0.5L0.758941 11" stroke="black"/>
                        </svg>                                                      
                    </a>
                    <p class="pb-20">
                        {{item.title}}
                    </p>

                    <div class="product-form__quantity quantity">
                        <span class="input-number-decrement quantity__button">
                            -
                        </span>
                        <input
                          type="number" id="Quantity-{{ product.id }}"
                          name="quantity" value="{{ item.quantity}}" min="1" pattern="[0-9]*"
                          class="quantity__input product-form__input product-form__input--quantity"
                          aria-label="{{ 'general.accessibility.quantity' | t }}"
                        >
                        <span class="input-number-increment quantity__button">
                            +
                        </span>
                    </div>

                    <div class="price pt-20">
                        {% if price_compare %}
                          <span class="price__value discount">{{ item.price_compare | money }}</span>
                        {% endif %}
                        <span class="price__value {% if price_compare %}sale-price{% endif %}">{{ item.price | money }}</span>
                        <!-- <span class="price__currency">{{ shop.currency }}</span> -->
                    </div>

                </div>
            </div>
            

            {% else %}

            <h4 class="text-center">Cart is empty</h4>

            {% endif %}
            {% endfor %}
        </section>
    
        <div class="quick-cart__footer">
    
        </div>
    </div>

    <a href="#" data-toggle="show" role="button" aria-expanded="true" aria-controls="#quick-cart" data-target="#quick-cart, body" class="background-modal" aria-label="background"></a>

</main>
