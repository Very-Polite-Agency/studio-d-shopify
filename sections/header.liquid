        <nav class="header__navigation navigation d-none d-lg-inline-flex">
          {% for link in linklists.main-menu.links %}

          {% if link.levels > 1 %}

          <div class="navigation__item nav-submenu px-15 ">
            <a href="{{ link.url }}" class="  navigation__link link">
              <div class="link__title">{{ link.title }}</div>
            </a>
            <div class="megamenu-drop">
              <div class="container-fluid">
                <div class="row">
                  <div class="col-12 d-flex">

                    {% for sub_link in link.links %}

                        <ul class="megamenu-drop-list">
                          <div class="navigation__item">
                            <a href="{{ sub_link.url }}" class="navigation__link link ">
                              <div class="link__title menu-title">{{ sub_link.title }}</div>
                            </a>
                          </div>
                          {% for sub_sub_link in sub_link.links %}

                            <li class="navigation__item">
                              <a href="{{sub_sub_link.url}}" class="navigation__link">
                              {{sub_sub_link.title}}
                            </a>
                            </li>
                          {% endfor %}
                        </ul>

                    {% endfor %}

                  </div>

                  </div>
                </div>
              </div>
          </div>
          {% else %}
            <div class="navigation__item">
              <a href="{{ link.url }}" class="navigation__link link">
                <div class="link__title">{{ link.title }}</div>
              </a>
            </div>
          {% endif %}

          {% endfor %}

          <div class="navigation__item">
            {% if template.name == 'cart' %}
            <a class="navigation__link d-flex align-items-center" href="/cart" >
              <svg width="15" height="17" viewBox="0 0 11 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="0.5" y="5.5" width="10" height="7" stroke="#121212"/>
                <path d="M9 4.5C9 2.567 7.433 1 5.5 1C3.567 1 2 2.567 2 4.5" stroke="#121212"/>
                </svg>

                  <span class="cart-count ">( <span data-ajax-cart-bind-state="cart.item_count">{{ cart.item_count }}</span> )</span>

            </a>
            {% else %}
            <a class="navigation__link d-flex align-items-center" href="#" data-toggle="show" role="button" aria-expanded="false" aria-controls="#quick-cart" data-target="#quick-cart, body" aria-label="cart">
              <svg width="15" height="17" viewBox="0 0 11 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="0.5" y="5.5" width="10" height="7" stroke="#121212"/>
                <path d="M9 4.5C9 2.567 7.433 1 5.5 1C3.567 1 2 2.567 2 4.5" stroke="#121212"/>
                </svg>

                  <span class="cart-count ">( <span data-ajax-cart-bind-state="cart.item_count">{{ cart.item_count }}</span> )</span>

            </a>
            {% endif %}
          </div>

          {% if customer %}
          <div class="navigation__item account-link">
            <a href="/account" class="navigation__link d-flex align-items-center">
              <svg width="15" height="15" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="6" cy="3" r="2.5" stroke="#247200"/>
                <path d="M11 12C11 9.23858 8.76142 7 6 7C3.23858 7 1 9.23858 1 12" stroke="#247200"/>
                </svg>
              <div class="link__title">Account</div>
            </a>
          </div>
          {%else%}
          <div class="navigation__item account-link">
            <a href="/account" class="navigation__link d-flex align-items-center">
              <svg width="15" height="15" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="6" cy="3" r="2.5" stroke="#247200"/>
                <path d="M11 12C11 9.23858 8.76142 7 6 7C3.23858 7 1 9.23858 1 12" stroke="#247200"/>
                </svg>
              <div class="link__title">Login</div>
            </a>
          </div>
          {% endif %}

        </nav>



        <button class="header__hamburger hamburger hamburger--squeeze js--mobile-menu-trigger d-lg-none" type="button">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button>

      </div>
    </div>
  </div>
</div>



{% stylesheet %}
{% endstylesheet %}



{% schema %}
 {
 	"name": "Header",
  "class": "header fixed",
 	"tag": "header",
 	"settings": [
    {
 			"content": "Navigation",
 			"type": "header"
 		},
 		{
 			"label": "Main Menu",
 			"type": "link_list",
 			"id": "menu_menu"
 		}
 	]
 }
{% endschema %}
