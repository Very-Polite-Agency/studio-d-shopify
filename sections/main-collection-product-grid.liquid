  , "settings" : [ { "label" : "Products per Page" , "type" : "select" , "options" : [ { "value" : "3" , "label" : "3"
  }, { "value" : "9" , "label" : "9" }, { "value" : "12" , "label" : "12" }, { "value" : "18" , "label" : "18" },
  { "value" : "24" , "label" : "24" } ], "default" : "9" , "id" : "products_per_page" }, { "label"
  : "Show second image on hover" , "type" : "checkbox" , "default" : false, "id" : "show_secondary_image" } ] } {%
  endschema %}