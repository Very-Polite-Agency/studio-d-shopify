{{ 'customer.css' | asset_url | stylesheet_tag }}


<div class="page-account">

  <div class="container-fluid pb-100">


    <div class="row">
      <div class="col-7 col-md-10 offset-lg-2">
        <h2>{{ 'customer.account.title' | t }} details.</h2>
        <a class="underline  link"  href="{{ routes.account_logout_url }}">
          {{ 'customer.log_out' | t }}
        </a>
      </div>
    </div>

    <div class="row justify-content-center pt-50">
      <div class="col-12  col-lg-10">

        <div class="row">
          <div class="col-12 col-md-8 pl-md-20 pl-lg-10 ">
            <div class="row pb-20">
              <div class="col-12 pl-0">
                <h4>{{ 'customer.orders.title' | t }}</h4>
              </div>
            </div>

            <div class="row pb-10 bb-black">
              <div class="col-2 link-text pl-0">{{ 'customer.orders.order_number' | t }}</div>
              <div class="col-2 link-text pl-0 "> {{ 'customer.orders.date' | t }}  </div>
              <div class="col-3 link-text"> {{ 'customer.orders.payment_status' | t }}  </div>
              <div class="col-3 link-text pr-0"> {{ 'customer.orders.fulfillment_status' | t }}  </div>
              <div class="col-2 text-right link-text pr-0"> {{ 'customer.orders.total' | t }}  </div>
              
            </div>

            {% if customer.orders.size > 0 %}
              {%- for order in customer.orders -%}
              

              <div class="row py-15 bb-black"  data-label="{{ 'customer.orders.order_number' | t }}">
                <div class="col-2 link-text pl-0">
                  <a class="underline" href="{{ order.customer_url }}" aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}" >
                    {{ order.name }}
                  </a>
                </div>
                <div class="col-2 link-text pl-0 ">  {{ order.created_at | date: "%m/%d/%y" }}  </div>
                <div class="col-3 link-text"> {{ order.financial_status_label }}  </div>
                <div class="col-3 link-text pr-0">  {{ order.fulfillment_status_label }} </div>
                <div class="col-2 text-right link-text pr-0"> {{ order.total_price | money }} </div>
              </div>

              {% endfor %}
            {% else %}
              <p class="py-20 text-center">
                It looks like there are no orders associated with this account!
              </p>
            {% endif %}

            

          </div>
          <div class="col-12 col-md-3 offset-md-1 pl-0 pt-50 pt-md-0">
              <h4 class="pb-20">Address</h4>

              <p>{{ customer.default_address | format_address }}</p>

              <a href="{{ routes.account_addresses_url }}" class="cta mt-30">
                <span class="link outlined">
                  {{ 'customer.account.view_addresses' | t }}
                </span>
              </a>
          </div>
        </div>

      </div>
    </div>

  </div>

</div>


